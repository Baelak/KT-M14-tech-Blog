{{!-- Post Page --}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>{{post.title}} - The Tech Blog</title>
</head>
<body>
    <header>
        <h1>The Tech Blog</h1>
        <nav>
            <a href="/">Home</a>
            <a href="/dashboard">Dashboard</a>
            <a href="/login">Login</a>
            <a href="/logout">Logout</a>
        </nav>
    </header>
    <div class="blog-post">
        <h2>{{post.title}}</h2>
        <p>{{post.contents}}</p>
        <small>Posted by {{post.username}} on {{post.createdAt}}</small>

        <div class="comment-section">
            <h3>Comments</h3>
            {{#each comments}}
                <div class="comment">
                    <p>{{this.contents}}</p>
                    <small>Commented by {{this.username}} on {{this.createdAt}}</small>
                </div>
            {{/each}}

            {{#if loggedIn}}
                <form action="/api/comments" method="POST">
                    <textarea name="contents" placeholder="Leave a comment..." required></textarea>
                    <input type="hidden" name="postId" value="{{post.id}}">
                    <button type="submit">Submit Comment</button>
                </form>
            {{else}}
                <p>You must be logged in to leave a comment.</p>
            {{/if}}
        </div>
    </div>
</body>
</html>
