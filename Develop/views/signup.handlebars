{{!-- Signup Page --}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>Sign Up - The Tech Blog</title>
</head>
<body>
    <header>
        <h1><a href="/">The Tech Blog</a></h1>
        <nav>
            <a href="/">Home</a>
            {{#if logged_in}}
                <a href="/dashboard">Dashboard</a>
                <a href="/logout">Logout</a>
            {{else}}
                <a href="/login">Login</a>
            {{/if}}
        </nav>
    </header>
    <div class="signup-form">
        <h2>Sign Up</h2>
        <form> <!-- Removed action and method attributes -->
            <input type="text" id="email-signup" name="email" placeholder="Email Address" required>
            <input type="text" id="username-signup" name="username" placeholder="Username" required>
            <input type="password" id="password-signup" name="password" placeholder="Password" required>
            <button type="submit">Sign Up</button>
        </form>
        <p>Already have an account? <a href="/login">Log in here</a></p>
    </div>

    <!-- Include your signup.js script -->
    <script src="/js/signup.js"></script>
</body>
</html>
