{{!-- Signup Page --}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css"> <!-- Corrected path -->
    <title>Sign Up - The Tech Blog</title>
</head>
<body>
    <header>
        <h1>The Tech Blog</h1>
        <nav>
            <a href="/">Home</a>
            {{#if logged_in}} <!-- Conditional rendering based on login status -->
                <a href="/dashboard">Dashboard</a>
                <a href="/logout">Logout</a>
            {{else}}
                <a href="/login">Login</a>
            {{/if}}
        </nav>
    </header>
    <div class="signup-form">
        <h2>Sign Up</h2>
        <form action="/api/users/signup" method="POST"> <!-- Corrected form action -->
            <input type="text" id="username-signup" name="username" placeholder="Username" required>
            <input type="password" id="password-signup" name="password" placeholder="Password" required>
            <button type="submit">Sign Up</button>
        </form>
        <p>Already have an account? <a href="/login">Log in here</a></p>
    </div>
</body>
</html>
