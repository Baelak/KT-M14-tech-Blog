<header>
  <h1>The Tech Blog</h1>
  <nav>
    <a href="/">Home</a>
    {{#if logged_in}}
      <a href="/dashboard">Dashboard</a>
      <a href="/logout">Logout</a>
    {{else}}
      <a href="/login">Login</a>
    {{/if}}
  </nav>
</header>

{{#each blogs}}
  <div>
    <h2>{{this.title}}</h2>
    <p>{{this.content}}</p>
    <p>Posted by {{this.user.username}} on {{this.createdAt}}</p>
    <a href="/post/{{this.id}}">Read more</a> <!-- Link to view the full post -->
  </div>
{{/each}}
